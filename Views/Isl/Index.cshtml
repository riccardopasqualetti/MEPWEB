    document.getElementById("FilterIslCRis").addEventListener("input", (e) => {
        e.target.value = e.target.value.toUpperCase();
    })
</script>
<script src="~/js/Filter.js?v=1.1"></script>
<script src="~/js/indexIsl.js"></script>
}